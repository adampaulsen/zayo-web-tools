{
  "manifest_version": 3,
  "name": "Service Component Copier",
  "version": "1.0",
  "description": "Adds a copy button next to Service Component codes.",
  "permissions": ["clipboardWrite"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
